<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistroAuspActivity">

    <LinearLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="18"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etNombAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_top"
                android:ems="10"
                android:hint="Nombre de Empresa"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etNombEncargadoAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_mid"
                android:ems="10"
                android:hint="Nombre de Encargado"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etTelefonoAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_mid"
                android:ems="10"
                android:hint="Telefono referencial"
                android:inputType="number"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etDireccionAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_mid"
                android:ems="10"
                android:hint="Dirección "
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etCorreoAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_mid"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etPasswordAuspReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_bottom"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <Button
                android:id="@+id/btnRegistrarAusp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="35dp"
                android:background="@drawable/button_style"
                android:text="Registrarse" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>